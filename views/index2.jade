    .col-lg-3.pages
    span.tip
      i.fa.fa-leaf
      i.fa.fa-plus-circle
    span.tip
      form(ng-submit="processForm()")
        .avatar
        textarea.commentbox(ng-model="newcomment.body")
        input.userinput(ng-model="newcomment.author", placeholder='name here')
