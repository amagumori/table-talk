form.signup( name='signupform', ng-controller='signupCtrl')
  input(type='text', class='username', name='username', ng-model='user.username', placeholder='Username') 
  input(type='text', class='email', name='email', ng-model='user.email', placeholder='email@example.com')
  input(type='password', class='password', name='password', ng-model='user.password', placeholder='Password') 
  button.cancel
  button.submitSignup(ng-click='submit(user)')
